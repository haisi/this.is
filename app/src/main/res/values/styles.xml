<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="DefaultButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_selectors</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="fontPath">fonts/Roboto-Light.ttf</item>-->
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
        <!--<item name="android:textViewStyle">@style/LightTextView</item>-->
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- "Fliesstext" style -->
    <style name="ContinuousTextStyle" parent="DefaultTextView">
        <item name="android:textSize">15sp</item>
        <!--<item name="fontPath">fonts/Roboto-Light.ttf</item>-->
    </style>

    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/default_font_color</item>
    </style>


</resources>
