<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/chatConversationWrapper"
            android:layout_toLeftOf="@+id/chatProfileImage"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:background="#624fb4fa">

            <TextView
                style="@style/ContinuousTextStyle"
                android:id="@+id/chatConversationMessage"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:scrollHorizontally="false"
                android:text="Hallo, wie geht es dir den heute? Wie waren die Ferien"
                android:textColor="@color/default_font_color"
                />

            <TextView
                android:id="@+id/chatConversationMessageDate"
                android:layout_below="@id/chatConversationMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scrollHorizontally="false"
                style="@style/ContinuousTextStyle"
                android:text="16:30"
                android:textColor="#878787"
                android:textSize="10dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/chatProfileImage"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/matches_no_profile_image_place_holder"/>

    </RelativeLayout>

</RelativeLayout>