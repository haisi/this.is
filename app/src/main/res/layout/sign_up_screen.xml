<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="To sign up to this.is you need to log in with a twitter or facebook account."/>

    <Button
        style="@style/DefaultButton"
        android:onClick="withFacebook"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white_font_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Sign up with facebook"/>

    <Button
        style="@style/DefaultButton"
        android:onClick="withTwitter"
        android:drawableLeft="@drawable/twitter"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white_font_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up with twitter"/>

</LinearLayout>